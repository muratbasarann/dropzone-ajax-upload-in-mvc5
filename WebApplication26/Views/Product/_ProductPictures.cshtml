@model List<ProductPicture>

@if (Model == null || (Model != null && Model.Count == 0))
{
    <span>Ürüne ait görseller burada görüntülenir..<br />Ürüne ait görsel bulunamadı.</span>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-2">
                <div class="my-2">
                    <div>
                        <img src="~/Uploads/@item.FileName" width="96" class="img-thumbnail" />
                    </div>
                    <div class="mt-1">
                        @Ajax.ActionLink("Sil","RemoveProductPicture",new { id = item.Id },new AjaxOptions { HttpMethod = "GET", Confirm="Ürün görseli silinsin mi?", OnComplete="refreshProductPicture" }, new { @class = "btn btn-danger btn-sm del-pic" })
                    </div>
                </div>
            </div>
        }
    </div>
}

<script>
    $("a.del-pic").prepend('<i class="fa fa-trash"></i>&nbsp;');
</script>